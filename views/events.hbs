<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Upcoming Events</h1>
        <p class="lead text-muted">Book your seats for the best sports and entertainment events</p>
    </div>

    <div class="row g-4">
        {{#each events}}
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-lg" style="border-radius: 1rem; overflow: hidden; transition: transform 0.3s;" onmouseover="this.style.transform='translateY(-10px)'" onmouseout="this.style.transform='translateY(0)'">
                <div class="p-4 text-center text-white" style="background: linear-gradient(135deg, {{#if (eq category 'concert')}}#e74c3c, #c0392b{{else if (eq category 'championship')}}#f39c12, #e67e22{{else}}#3498db, #2980b9{{/if}});">
                    <div style="font-size: 3.5rem; margin-bottom: 1rem;">{{icon}}</div>
                    <h4 class="fw-bold mb-2">{{title}}</h4>
                    <p class="mb-0 opacity-90">{{subtitle}}</p>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3 mb-4">
                        <div class="col-4 text-center">
                            <small class="text-muted d-block">DATE</small>
                            <strong>{{formatDate date}}</strong>
                        </div>
                        <div class="col-4 text-center">
                            <small class="text-muted d-block">TIME</small>
                            <strong>{{time}}</strong>
                        </div>
                        <div class="col-4 text-center">
                            <small class="text-muted d-block">FROM</small>
                            <strong class="text-success">â‚¦{{prices.regular}}</strong>
                        </div>
                    </div>
                    <a href="/events/{{_id}}/book" class="btn btn-primary w-100 py-2 fw-semibold">Book Now</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>
<script>
Handlebars.registerHelper('formatDate', function(date) {
    return new Date(date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
});
Handlebars.registerHelper('eq', function(a, b) { return a === b; });
</script>